@model IEnumerable<UrunKatalog.MvcWebApp.Models.UseOrderModel>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz.</h2>
            <hr />
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Tarihi</th>
                        <th>Toplam Tutar</th>
                        <th></th>@*Sipariş Durumu*@
                        <th></th>@*Sipariş Detayı*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderDate.ToShortDateString()</td>    @*Kısa tarih bilgisi yazacak*@
                            <td>@item.Total.ToString("c")</td>     
                            <td>@item.OrderState</td>
                            <td>@Html.ActionLink("Details","Details",new { Id = item.Id} ,new {@class = "btn btn-primary"})</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
