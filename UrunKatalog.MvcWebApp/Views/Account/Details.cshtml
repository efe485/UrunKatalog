@model UrunKatalog.MvcWebApp.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Detayları</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Sipariş Durumu</dt>
                <dd class="col-sm-9">@Model.OrderState</dd>
                <dt class="col-sm-3">Sipariş Id</dt>
                <dd class="col-sm-9">@Model.DetailsId</dd>
                <dt class="col-sm-3">Sipariş Kodu</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>
                <dt class="col-sm-3">Tutar</dt>
                <dd class="col-sm-9">@Model.Total.ToString("c")</dd>
                <dt class="col-sm-3">Sipariş Tarihi</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>
                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">@Model.Adres</dd>
                <dt class="col-sm-3">Ürünler</dt>
                <dd class="col-md-9">
                    <table>
                        <thead>
                            <tr>
                                <th>Resmi</th>
                                <th>Ürün Adı</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th></th>   @*Product details butonu gelecek*@
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.Orderlines)
                        {
                            <tr>
                                <td><img src="/Upload/@item.Image" width="100px" height="90px"/></td>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                <td></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </dd>
            </dl>
        </div>
    </div>
</div>