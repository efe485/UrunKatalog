@using UrunKatalog.MvcWebApp.Models;
@model IEnumerable<ProductModel>

<div class="container pb-5">
    <div class="container tempdata-container">
        <span><strong class="tempdata-strong">@TempData["productName"]</strong> aramanızla ilgili sonuçlar.</span>
    </div>
    <div class="container pb-5">
        @{
            if (@TempData["productName"] != null)
            {
                if (Model.Count() == 0)
                {
                    <div class="alert alert-warning" role="alert"><i class="fas fa-exclamation-circle"></i> Aradığınız isimde bir ürün bulanamıştır.</div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert"><i class="fas fa-check-square"></i> <strong>@Model.Count() adet</strong> ürün bulunmuştur.</div>
                    @Html.Partial("_ProductList", Model)
                }
            }
            else
            {
                <div class="alert alert-warning" role="alert"><i class="fas fa-exclamation-circle"></i> Arama yapılmamıştır.
            </div>
            }


        }
    </div>
    </div>

